<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if flash.notice %>
      <div class="alert alert-success">
        <%= flash.notice %>
      </div>
    <% end %>
    <% if flash.alert %>
      <div class="alert alert-danger">
        <%= flash.alert %>
      </div>
    <% end %>
  </div>
</div>
