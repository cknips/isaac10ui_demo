      "http://test.localhost.dev:3000/customer/dashboard?token=test_api_token" %>
    <br>
    <br>
    <form action="http://test.localhost.dev:3000/customer/dashboard?token=test_api_token"
      method="POST">
      <button id="post_login"
        type="submit"
        class="btn btn-primary">
        Customer Dashboard
      </button>
    </form>
    <br>
    <br>
    <form action="http://test.localhost.dev:3000/customer/account?a=account&token=test_api_token#/account"
      method="POST">
      <button id="post_login"
        type="submit"
        class="btn btn-primary">
        Customer Account
      </button>
    </form>
  <% end %>
</div>
